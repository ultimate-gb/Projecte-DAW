#projecteCalendarApp {
    #loginForm, #registerForm {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-image: url("../img/backgroundLoginImg.jpg");
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center center;
        main {
            width: 576px;
            background-color: rgba(0,0,0,0.25);
            padding: 4% 2.5% 4% 2.5%;
            header {
                padding-bottom: 2%;
                font-family: 'Baloo 2', cursive;
                //background-color: rgb(0, 0, 117);
                h1 {
                    text-align: center;
                    color: white;
                    text-transform: uppercase;
                    font-weight: bold;
                }
            }
            form {
                div {
                    .input-group-text, .form-control {
                        padding-top: 2%;
                        padding-bottom: 2%;
                        background-color: white;
                        color: rgb(0, 0, 117);
                    }
                    label.input-group-text  {
                        border-right: 0px;
                    }
                    input.form-control, select.form-select {
                        border-left: 0px;
                    }
                    input.form-check-input {
                        margin-right: 2%;
                    }
                    label.form-check-label {
                        color: white;
                    }
                }
            }
        }
        .btnLogin {
            padding: 2%;
            font-family: 'Baloo 2', cursive;
            font-size: 20px;
            width: 100%;
        }
    }
    .errorInputs {
        border-color: red;
    }
    .onFocus {
        border-color: blue;
        border-width: 1.5px;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    }
    .bg-newblue {
        background-color: rgb(0, 0, 117);
    }
    .calendariArt {
        width: 25%;
        border: 1px solid black;
        padding-left: 0px;
        padding-right: 0px;
        header {
            background-color: rgb(0, 0, 121);
            color: white;
        }
        main {
            display: flex;
            flex-direction: column;
            justify-content: center;
            margin: 0px auto;
            .line {
                width: 100%;
                justify-content: center;
                align-items: center;
                p {
                    margin-bottom: 0px;
                }
            }
            .line:first-child {
                margin-top: 2%;
            }
        }
    }
    #index {
        &>main {
            &>div {
            margin-top: 0.5%;
                .btn {
                    width: 5%;
                    height: 5%;
                }
                height: 5%;
            }
            &>main {
                margin-bottom: 2%;
                &>section {
                    display: flex;
                    justify-content: space-around;
                    gap: 2%;
                }
            }
            &>section {
                margin-bottom: 2%;
                &>div {
                    display: flex;
                    justify-content: space-around;
                    flex-wrap: wrap;
                    gap: 2%;
                    .calendariArt {
                        margin-bottom: 2%;
                    }
                }
            }
        }
        .titolZone {
            display: flex;
            justify-content: space-between;
            margin-top: 0.5%;
            .btn {
                width: 5%;
                height: 5%;
            }
            height: 5%;
        }
    }
    #calendariManager {
        .btn-manager {
            width: 20%;
        }
    }
    #calendariViewer {
        .titolZone {
            display: flex;
            justify-content: space-between;
            margin-top: 0.5%;
            .btn {
                width: 5%;
                height: 5%;
            }
            height: 5%;
        }
    }
    #helperManager {
        & form .selectDiv {
            height: 65px;
            select {
                height: 100%;
            }
        }
    }
    .topMessage {
        position: absolute;
        top: 0px;
        left: 0px;
        width: 100%;
        text-align: center;
    }
    .leftHeader {
        display: flex;
        justify-content: space-between;
        width: 8%;
    }
}
@media only screen and (max-width: 1200px) {
    #projecteCalendarApp {
        #loginForm, #registerForm  {
            main {
                width: 60%;
            }
        }
        
    }
}

@media only screen and (max-width: 768px) {
    #projecteCalendarApp {
        height: 100%;
        #loginForm, #registerForm {
            align-items: flex-start;
            height: 100%;
            main {
                margin-top: 25%;
                width: 100%;
                header {
                    h1 {
                        font-size: 50px;
                    }
                }
                form {
                    div {
                        .input-group-text, .form-control {
                            font-size: 20px;
                        }
                        input.form-check-input {
                            margin-top: 0px;
                            width: 25px;
                            height: 25px;
                        }
                        label.form-check-label {
                            font-size: 20px;
                        }
                    }
                    div.checkboxGroup {
                        align-items: center;
                    }
                    div.buttonGroup {
                        flex-direction: column;
                    }
                }
                .btnLogin {
                    font-size: 20px;
                }
            }
        }
        
    }
}