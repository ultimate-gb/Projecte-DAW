$bgblue = rgb(0, 0, 117);
#projecteCalendarApp {
    body {
        min-height: 100vh;
    }
    .app {
        display: flex;
        justify-content: space-between;
        flex-direction: column;
        main {
            flex: 1;
        }
    }
    #loginForm, #registerForm {
        display: flex;
        justify-content: center;
        background-image: url("../img/backgroundLoginImg.jpg");
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center center;
        main {
            width: 576px;
            background-color: rgba(0,0,0,0.25);
            padding: 4% 2.5% 4% 2.5%;
            header {
                padding-bottom: 2%;
                font-family: 'Baloo 2', cursive;
                //background-color: $blue;
                h1 {
                    text-align: center;
                    color: white;
                    text-transform: uppercase;
                    font-weight: bold;
                }
            }
            form {
                div {
                    .input-group-text, .form-control {
                        padding-top: 2%;
                        padding-bottom: 2%;
                        background-color: white;
                        color: $bgblue;
                    }
                    label.input-group-text  {
                        border-right: 0px;
                    }
                    input.form-control, select.form-select {
                        border-left: 0px;
                    }
                    input.form-check-input {
                        margin-right: 2%;
                    }
                    label.form-check-label {
                        color: white;
                    }
                }
            }
        }
        .btnLogin {
            padding: 2%;
            font-family: 'Baloo 2', cursive;
            font-size: 20px;
            width: 100%;
        }
    }
    &>#loginForm {
        align-items: center;
        main {
            height: 25%;
        }
    }
    &>#registerForm {
        main {
            margin-bottom: 4%;
            margin-top: 4%;
        }
    }
    .errorInputs {
        border-color: red;
    }
    .onFocus {
        border-color: $bgblue;
        border-width: 1.5px;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    }
    .bg-newblue {
        background-color: $bgblue;
    }
    .calendariArt {
        width: 35%;
        border: 1px solid black;
        padding-left: 0px;
        padding-right: 0px;
        header {
            background-color: $bgblue;
            color: white;
        }
        main {
            display: flex;
            flex-direction: column;
            justify-content: center;
            margin: 0px auto;
            .line {
                width: 100%;
                justify-content: center;
                align-items: center;
                p {
                    margin-bottom: 0px;
                }
            }
            .line:first-child {
                margin-top: 2%;
            }
        }
    }
    #index {
        &>main {
            &>div {
            margin-top: 0.5%;
                .btn {
                    width: 5%;
                    height: 5%;
                }
                height: 5%;
            }
            &>main {
                margin-bottom: 2%;
                &>section {
                    display: flex;
                    justify-content: space-around;
                    flex-wrap: wrap;
                    gap: 2%;
                    .calendariArt {
                        margin-bottom: 2%;
                    }
                }
            }
            &>section {
                margin-bottom: 2%;
                &>div {
                    display: flex;
                    justify-content: space-around;
                    flex-wrap: wrap;
                    gap: 2%;
                    .calendariArt {
                        margin-bottom: 2%;
                    }
                }
            }
        }
        .titolZone {
            display: flex;
            justify-content: space-between;
            margin-top: 0.5%;
            .btn {
                width: 5%;
                height: 5%;
            }
            height: 5%;
        }
        #informe {
            text-align: center;
            header {
                justify-content: center
            }
            main {
                text-align: center;
                a {
                    width: 25%;
                }
            }
        }
    }
    #calendariManager {
        .btn-manager {
            width: 20%;
        }
    }
    #calendariViewer {
        .titolZone {
            display: flex;
            justify-content: space-between;
            margin-top: 0.5%;
            .btn {
                width: 5%;
                height: 5%;
            }
            height: 5%;
        }
    }
    #helperManager {
        & form .selectDiv {
            height: 65px;
            select {
                height: 100%;
            }
        }
    }
    #calendariViewer {
        #publicacio {
            text-align: center;
            .titolZone {
                justify-content: center;
            }
            a {
                width: 25%;
            }
        }
        #exportacio {
            text-align: center;
            .titolZone {
                justify-content: center;
            }
            a {
                width: 25%;
            }
        }
    }
    .topMessage {
        position: absolute;
        top: 0px;
        left: 0px;
        width: 100%;
        text-align: center;
    }
    .leftHeader {
        display: flex;
        justify-content: space-between;
        width: 8%;
        a:first-child  {
            margin-right: 2%;
        }
    }
    #loader {
        width: 100%;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        position: fixed;
        background: white;
        top: 0px;
        .log, .log2 {
            width: 100px;
            height: 100px;
            border-radius: 50%;
        }
        .log {
            border:20px solid transparent;
            border-top-color: rgb(0, 0, 121);
            animation: example 1s linear 0s infinite;
        }
        .log2 {
            position: absolute;
            border-radius: 50%;
            border:20px solid grey;
        }
    }
    footer {
        padding-top: 1%;
        padding-bottom: 1%;
        &>div {
            display: flex;
            justify-content: space-between;
            color: white;
            p {
                padding-bottom: 0px;
                margin-bottom: 0px;
            }
        }

    }
}
@media only screen and (max-width: 1200px) {
    #projecteCalendarApp {
        #loginForm, #registerForm  {
            main {
                width: 60%;
            }
        }
        .calendariArt {
            width: 50%;
        }
        #index {
            &>main {
                &>main {
                    &>section {
                        display: flex;
                        justify-content: space-around;
                    }
                }
                &>section {
                    margin-bottom: 2%;
                    &>div {
                        display: flex;
                        justify-content: space-around;
                        flex-wrap: wrap;
                        gap: 2%;
                        .calendariArt {
                            margin-bottom: 2%;
                        }
                    }
                }
            }
            .titolZone {
                .btn {
                    width: 25%;
                    height: 5%;
                }
             }
            #informe {
                main {
                    a {
                        width: 50%;
                    }
                }
            }
        }
        #calendariViewer {
            .titolZone {
                .btn {
                    width: 25%;
                }
            }   
        }
        .btn-manager {
            width: 50%;
        }
    }
}

@media only screen and (max-width: 768px) {
    #projecteCalendarApp {
        height: 100%;
        #loginForm, #registerForm {
            align-items: flex-start;
            height: 100%;
            main {
                margin-top: 25%;
                width: 100%;
                header {
                    h1 {
                        font-size: 50px;
                    }
                }
                form {
                    div {
                        .input-group-text, .form-control {
                            font-size: 20px;
                        }
                        input.form-check-input {
                            margin-top: 0px;
                            width: 25px;
                            height: 25px;
                        }
                        label.form-check-label {
                            font-size: 20px;
                        }
                    }
                    div.checkboxGroup {
                        align-items: center;
                    }
                    div.buttonGroup {
                        flex-direction: column;
                    }
                }
                .btnLogin {
                    font-size: 20px;
                }
            }
        }
        .calendariArt {
            width: 100%;
        }
        #index {
            &>main {
                &>main {
                    &>section {
                        display: flex;
                        justify-content: space-around;
                        flex-direction: column;
                    }
                }
                &>section {
                    margin-bottom: 2%;
                    &>div {
                        display: flex;
                        justify-content: space-around;
                        flex-wrap: wrap;
                        gap: 2%;
                        .calendariArt {
                            margin-bottom: 2%;
                        }
                    }
                }
            }
            .titolZone {
                display: flex;
                align-items: center;
                flex-direction: column;
                margin-top: 0.5%;
                .btn {
                    width: 95%;
                    height: 10%;
                }
                margin-bottom: 5%;
             }
        }
        #calendariViewer {
            .titolZone {
                display: flex;
                align-items: center;
                flex-direction: column;
                margin-top: 0.5%;
                .btn {
                    width: 95%;
                    height: 10%;
                }
                margin-bottom: 5%;
            }   
        }
        .leftHeader {
            display: flex;
            justify-content: space-between;
            width: 50%;
        }
        &>body {
            &>header {
                &>nav {
                    flex-direction: column;

                }
            }
        }
        #calendariViewer {
            #publicacio {
                a {
                    width: 100%;
                }
            }
            #exportacio {
                text-align: center;
                a {
                    width: 100%;
                    margin-bottom: 5%;
                }
            }
        }
        .btn-manager {
            width: 100%;
        }
    }

    
}

@keyframes example {
    0% {
        transform: rotate(0deg);
    }
    25% {
        transform: rotate(90deg);
    }
    50% {
        transform: rotate(180deg);
    }
    75% {
        transform: rotate(260deg);
    }
    100% {
        transform: rotate(360deg);
    }
}